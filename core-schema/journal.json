{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poseidat.org/core-schema/journal.json",
  "title": "Journal",
  "description": "A trip journal",
  "properties": {
    "journal_id": {
      "type": "string",
      "format": "uuid",
      "description": "The unique identifier for the journal (UUID v4)"
    },
    "vessel": {
      "description": "The vessel this journal belongs to",
      "$ref": "https://poseidat.org/core-schema/vessel.json"
    }
 },
  "required": [
    "journal_id",
    "vessel"
  ],
  "type": "object",
  "additionalProperties": false
}